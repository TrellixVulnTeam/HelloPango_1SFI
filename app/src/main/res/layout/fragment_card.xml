<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="coshx.com.rewards.CardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="160dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/cc" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="160dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/cc" />

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="14sp"
                android:text="PURCHASE HISTORY"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/cardview_bg"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview_bg"
                    >

                    <TextView
                        android:id="@+id/tv_purchase_business1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="Starbucks"
                        android:textColor="#40b6ff" />

                    <TextView
                        android:id="@+id/tv_purchase_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv_purchase_business1"
                        android:layout_below="@id/tv_purchase_business1"
                        android:layout_marginBottom="16dp"
                        android:text="$23.54"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_purchase_business1"
                        android:layout_marginBottom="16dp"
                        android:layout_toRightOf="@id/tv_purchase_amount"
                        android:text=" - Oct 21, 2017"
                        android:textColor="#aaa" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/cardview_bg"

                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_purchase_business2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="Uniqlo"
                        android:textColor="#40b6ff" />

                    <TextView
                        android:id="@+id/tv_purchase_amount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv_purchase_business2"
                        android:layout_below="@id/tv_purchase_business2"
                        android:layout_marginBottom="16dp"
                        android:text="$17.38"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_purchase_business2"
                        android:layout_marginBottom="16dp"
                        android:layout_toRightOf="@id/tv_purchase_amount1"
                        android:text=" - Oct 16, 2017"
                        android:textColor="#aaa" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/cardview_bg"

                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_purchase_business3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="Starbucks"
                        android:textColor="#40b6ff" />

                    <TextView
                        android:id="@+id/tv_purchase_amount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv_purchase_business3"
                        android:layout_below="@id/tv_purchase_business3"
                        android:layout_marginBottom="16dp"
                        android:text="$4:57"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_purchase_business3"
                        android:layout_marginBottom="16dp"
                        android:layout_toRightOf="@id/tv_purchase_amount2"
                        android:text=" - Oct 13, 2017"
                        android:textColor="#aaa" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/cardview_bg"

                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_purchase_business4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="Starbucks"
                        android:textColor="#40b6ff" />

                    <TextView
                        android:id="@+id/tv_purchase_amount4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv_purchase_business4"
                        android:layout_below="@id/tv_purchase_business4"
                        android:layout_marginBottom="16dp"
                        android:text="$3.69"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_purchase_business4"
                        android:layout_marginBottom="16dp"
                        android:layout_toRightOf="@id/tv_purchase_amount4"
                        android:text=" - Oct 11, 2017"
                        android:textColor="#aaa" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
